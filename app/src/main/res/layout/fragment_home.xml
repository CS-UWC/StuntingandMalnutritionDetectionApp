<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"> <!-- Add margin at the bottom -->

        <!-- Card 1: Malnutrition -->
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/appColor"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is Malnutrition?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malnutrition occurs when the body doesn't get enough nutrients. It can lead to various health problems, including stunted growth, weakened immune systems, and developmental delays."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 2: Stunting -->
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/secondaryColor"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Stunting?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stunting is a form of malnutrition that causes children to be shorter than normal for their age due to long-term insufficient nutrient intake and infections."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Card 3: Interventions -->
<androidx.cardview.widget.CardView
app:cardBackgroundColor="@color/secondaryColor"
android:layout_width="0dp"
android:layout_height="120dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Stunting Interventions"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/black" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Interventions include proper nutrition during pregnancy and early childhood, breastfeeding, and access to healthcare services to prevent and treat infections."
    android:textSize="14sp"
    android:textColor="@color/black"
    android:layout_marginTop="8dp" />

</LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 4: Stunting Statistics -->
<androidx.cardview.widget.CardView
app:cardBackgroundColor="@color/appColor"
android:layout_width="0dp"
android:layout_height="120dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Stunting Statistics"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/white" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Globally, around 22% of children under the age of 5 are stunted. The prevalence is highest in Sub-Saharan Africa and South Asia."
    android:textSize="14sp"
    android:textColor="@android:color/darker_gray"
    android:layout_marginTop="8dp" />

</LinearLayout>
    </androidx.cardview.widget.CardView>
    </GridLayout>

    </FrameLayout>

